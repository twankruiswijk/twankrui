{
  "private": true,
  "name": "remix-app-template",
  "description": "",
  "license": "",
  "scripts": {
    "build": "npm run build:css && remix build",
    "build:css": "tailwindcss -i ./app/styles/tailwind.css -o ./app/tailwind.css --minify",
    "dev": "concurrently \"npm run dev:css\" \"node -r dotenv/config node_modules/.bin/remix dev\"",
    "dev:css": "tailwindcss -i ./app/styles/tailwind.css -o ./app/tailwind.css --watch",
    "postinstall": "remix setup node",
    "prepare": "husky install"
  },
  "dependencies": {
    "@notionhq/client": "^1.0.4",
    "@remix-run/react": "^1.5.1",
    "@remix-run/serve": "^1.5.1",
    "@remix-run/vercel": "^1.5.1",
    "dotenv": "^16.0.1",
    "fathom-client": "^3.4.1",
    "postcss": "^8.4.14",
    "react": "^18.1.0",
    "react-alert": "^7.0.3",
    "react-dom": "^18.1.0",
    "react-syntax-highlighter": "^15.5.0",
    "remix": "^1.5.1"
  },
  "devDependencies": {
    "@remix-run/dev": "^1.5.1",
    "@types/react": "^18.0.12",
    "@types/react-alert": "^7.0.2",
    "@types/react-dom": "^18.0.5",
    "concurrently": "^7.2.1",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.1",
    "prettier": "2.7.0",
    "tailwindcss": "^3.1.2",
    "typescript": "^4.7.3"
  },
  "engines": {
    "node": ">=14"
  },
  "sideEffects": false,
  "lint-staged": {
    "*.{js,ts,tsx,css,md}": "prettier --write"
  }
}
